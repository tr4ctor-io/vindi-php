{
    "name": "vindi/vindi-php",
    "description": "SDK Vindi para PHP.",
    "keywords": [
        "vindi",
        "vindi-php",
        "vindi-php-sdk"
    ],
    "homepage": "https://github.com/vindi/vindi-php",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Vindi",
            "email": "comunidade@vindi.com.br",
            "homepage": "https://www.vindi.com.br/"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "8.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Vindi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vindi\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "code-style": "./vendor/bin/phpcs --standard=PSR2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
